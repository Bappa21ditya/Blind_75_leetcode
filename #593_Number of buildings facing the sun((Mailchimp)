class Solution{
    public:
    int longest(int arr[],int n)
    {
        int res=1;
        int maxi=arr[0];
        for(int i=1;i<n;i++)
        {
            if(maxi<=arr[i])
            {
                res+=1;
                maxi=arr[i];
            }
        }
        return res;
        // Write your code here
    }
};
